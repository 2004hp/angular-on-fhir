p.text-default(*ngIf='conditions.length == 0')
  i (none)
table.table.table-condensed.table-striped(*ngIf='conditions.length > 0')
  colgroup
    col(style='width:60%')
    col(style='width:15%')
    col(style='width:25%')
  thead
    tr
      th
        | Description
      th
        | Status
      th
        | Onset
  tbody
    tr(*ngFor='let c of conditions')
      // <td>{{c.id}}</td>
      td {{c.code['text']}}
      td {{c.clinicalStatus}}
      td {{c.onsetDateTime | amTimeAgo}}
